<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_start_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Buah Batu" />


        <TextView
            android:id="@+id/txt_stop_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sukabirus" />

        <TextView
            android:id="@+id/txt_time_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6.40 PM" />


        <TextView
            android:id="@+id/txt_distance_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Distance 21 KM" />


        <TextView
            android:id="@+id/txt_duration_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Duration 20 mins" />


        <TextView
            android:id="@+id/txt_score_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Score 100" />


    </LinearLayout>

</LinearLayout>